<!DOCTYPE html>
<html>
<head>
  <title>Viralbeat</title>
  <%= stylesheet_link_tag    "bootstrap", "application", :media => "all" %>
  <%= javascript_include_tag "jquery", "jquery-ui", "bootstrap", "jquery_ujs", "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to "Viralbeat Message Board", root_path, :class => "brand" %>
        <div class="nav-collapse collapse">
          <ul class="nav pull-right">
            <% if user_signed_in?  %>
              <li><%= link_to "Messages", messages_url %></li>
              <li><%= link_to "Log Out", destroy_user_session_url, :method => :delete %></li>
            <% else %>
              <li><%= link_to "Home", root_url %></li>
              <li><%= link_to "Sign Up", new_user_registration_url %></li>
              <li><%= link_to "Sign In", new_user_session_url %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

  <div class="container">
    <% if notice %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%=  notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%=  alert %>
      </div>
    <% end %>  

		<%= yield %>
  </div> <!-- /container -->
</div>

</body>
</html>
