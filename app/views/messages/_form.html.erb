<h3><%= @message.new_record? ? "Submit a Posting" : "Edit a Posting" %></h3>
<hr />
<%= form_for(@message, :remote => true) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h4>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style="float:left; width: 100%">
    <div style="float:left; width: 50%">
      <div class="control-group">
        <%= f.label :title, :class => "control-label" %>
        <div class="controls"><%= f.text_field :title, :class => "large", :style => "width:95%" %></div>
      </div>
      <div class="control-group">
        <%= f.label :name, "Name", :class => "control-label" %>
        <div class="controls"><%= text_field_tag :title, @message.user.name, :class => "large", :disabled => true, :style => "width:95%" %></div>
      </div>
    </div>

    <div style="float:right; width:50%">
      <div class="control-group">
        <%= f.label :body, :class => "control-label" %>
        <div class="controls"><%= f.text_area :body, :rows => 5, :cols => 120, :class => "large", :style => "width:95%" %></div>
      </div>
      <div class="control-group" style="text-align: right; padding-right: 15px">
        <div class="controls"><%= button_to @message.new_record? ? "Submit" : "Update", :remote => true, :class => "btn btn-warning" %></div>
      </div>
    </div>
  </div>
<% end %>
