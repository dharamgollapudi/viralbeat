<% if @message.errors.any? %>
  $("#message_list").hide();
  $("#message_detail").hide();
  $("#message_form").html("<%= escape_javascript(render(:partial => "form"))%>").show();
<% else %>
  $("#message_form").hide();
  $("#message_detail").hide();
  $("#message_list").html("<%= escape_javascript( render "messages" ) %>").show();
<% end %>